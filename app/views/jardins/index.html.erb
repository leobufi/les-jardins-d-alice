<% if @images.where(jardin: true).first.jardin_cover.attached? %>
  <div class="title-jardins" style="background-image: url( <%= cl_image_path @images.where(jardin: true).first.jardin_cover.key, crop: :fill %> )">
      <h1>Les Jardins</h1>
  </div>
<% else %>
  <div class="title-jardins" style="background-image: url(Jardins-banner-image.JPG)">
      <h1>Les Jardins</h1>
  </div>
<% end %>
<% @jardins.each do |jardin| %>
  <div class="jardins-boxes">
    <h4><%= jardin.title %></h4>
    <span><%= jardin.description %></span>
    <div class="jardin-photos">
      <% if jardin.main_photo.attached? %>
        <%= cl_image_tag jardin.main_photo.key %>
      <% else %>
        <%= image_tag "SVG/Leafs.svg" %>
      <% end %>
    </div>
    <div class="jardin-photos">
      <% if jardin.photos_url.attached? %>
        <%= jardin.photos_url.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <% end  %>
      <% else %>
        <%= image_tag "SVG/Leafs.svg" %>
      <% end %>
    </div>
  </div>
<% end %>
