<% content_for :meta_title, "Ma commande - #{DEFAULT_META["meta_product_name"]}" %>
<div class="order-container text-center">
  <h1>Merci pour votre commande !</h1>
  <h2>Commande #<%= @order.id %></h2>
  <h4><%= @order.state %></h4>
  <ul class="list-unstyled">
    <li><strong>Effectuée le</strong> <%= @order.created_at.to_date.strftime("%d/%m/%Y") %></li>
    <li><strong>Total : </strong> <%= @order.amount %> €</li>
    </li>
  </ul>
  <%= link_to root_path do %>
    <button>Retour à la page d'acceuil</button>
  <% end %>
</div>
