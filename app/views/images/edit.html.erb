<% if current_user.admin? %>
<div class="dashboard">
  <%= render "shared/navbar_dashboard" %>
  <div class="dashboard-container">
    <h4>Modifier l'image</h4>
    <br>
      <%= simple_form_for(@image) do |f| %>
        <% if @image.home? %>
          <%= f.input :home_cover, as: :file, label: "Photo de couverture de la page d'acceuil  :" %>
        <% elsif @image.jardin? %>
          <%= f.input :jardin_cover, as: :file, label: "Photo de couverture de la page Jardin :" %>
        <% elsif @image.prestation? %>
          <%= f.input :prestation_galeries, as: :file, input_html: { multiple: true }, label: "Galerie d'images de la page prestation :" %>
        <% elsif @image.logos? %>
          <%= f.input :logos_img, as: :file, input_html: { multiple: true }, label: "Logos de labélisation :" %>
        <% elsif @image.coffret_on_demand? %>
          <%= f.input :coffret_on_demand_img, as: :file, input_html: { multiple: true }, label: "Image Coffrets à la demande :" %>
        <% end %>
        <hr>
        <button>
          <%= f.button :submit, "Mettre en ligne" %>
        </button>
      <% end %>
  </div>
</div>
<% else %>
    <p>Vous n'êtes pas autorisé à consulter cette page.</p>
<% end  %>
