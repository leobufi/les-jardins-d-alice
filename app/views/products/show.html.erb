<div class="product-container">
  <div class="product-main">
    <div class="product-image">
      <% if @product.main_photo.attached? %>
        <%= cl_image_tag @product.main_photo.key %>
      <% else %>
        <%= image_tag "SVG/Leafs.svg" %>
      <% end %>
    </div>
    <div class="product-infos">
      <div>
        <h3><%= @product.title %></h3>
        <p><%= @product.description %></p>
      </div>
      <div class="details">
        <div>
          <span>Origine : <strong><%= @product.origin %></strong>.</span>
          <br>
          <span>Quantit√© : <strong><%= @product.quantity %></strong>.</span>
          <br>
          <br>
          <h4><%= @product.price %> <%= @product.price_currency %></h4>
        </div>
        <div class="cart-add">
          <%= link_to line_items_path(product_id: @product.id), method: :post do %>
              <button>Ajouter au panier <%= image_tag "SVG/panier.svg" %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <% if @product.photos_url.attached? %>
      <div class="photos_url">
        <%= @product.photos_url.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <% end  %>
    <% end %>
  </div>
</div>
