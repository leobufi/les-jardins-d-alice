<div class="dashboard-container" data-controller="refresh-list">
  <div class="dashboard-title">
    <h2>Commandes</h2>
  </div>
  <div class="search-bar">
    <%= form_with url: dashboard_path, method: :get, html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Recherche une commande par nom, prénom, adresse, numéro...",
        data: {
            refresh_list_target: 'searchInput',
            action: "keyup->refresh-list#update"
            } %>
    <% end %>
  </div>
  <div data-refresh-list-target="list">
    <table>
      <colgroup span="4" class="columns"></colgroup>
        <tr class= "table-headers">
          <th>N°</th>
          <th>Nom</th>
          <th>email</th>
          <th>Adresse</th>
          <th>CGV ?</th>
          <th>Commande</th>
          <th>Chèque ?</th>
          <th>Montant</th>
          <th>Statut</th>
          <th>Date</th>
          <th>Supprimer</th>
        </tr>
        <% @orders.each do |order| %>
        <tr class="table-line">
          <th><%= order.id %></th>
          <th><%= order.first_name %> <%= order.last_name %></th>
          <th><%= order.email %></th>
          <th><%= order.address %></th>
          <th>
          <% if order.data? %>
            <span>Oui</span>
          <% else %>
            <span>Non</span>
          <% end %>
          </th>
          <th>
          <% order.line_items.each do |item| %>
            <% if item.product_id %>
              <span><%= item.product.title %> x <%= item.quantity %></span>
            <% elsif item.coffret_id %>
              <span><%= item.coffret.title %> x <%= item.quantity %></span>
            <% end %>
          <% end %>
          </th>
          <th>
            <% if order.check? %>
              <span>Oui</span>
            <% else %>
              <span>Non</span>
            <% end %>
          </th>
          <th><%= order.amount %> €</th>
          <th><%= order.state %></th>
          <th><%= order.created_at.to_date.strftime("%d/%m/%Y") %></th>
          <th>
          <%= link_to order_path(order), method: :delete, remote: true, data: { confirm: "Es-tu vraiment sûre de ton choix Alice ?" } do %>
            <i class="fa fa-trash-can"></i>
          <% end %>
          </th>
        <% end %>
    </table>
  </div>
</div>
