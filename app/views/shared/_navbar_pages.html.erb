<div class="navbar-pages">
  <div class="navbar-top">
    <div class="nav-top-logo">
      <%= link_to root_path do %>
        <%= image_tag "SVG/Banner_logo.svg" %>
      <% end %>
    </div>
    <div class="cart">
      <%= link_to "Panier (#{@current_cart.line_items.count})", cart_path(@current_cart) %>
    </div>
  </div>
  <div class="navbar" data-controller="active-nav">
      <% @rayons.each do |rayon| %>
        <div id="classe/<%= rayon.id %>-<%= I18n.transliterate(rayon.title.downcase) %>" class="dropdown" data-active-nav-target="title">
          <%= link_to rayon_path(rayon) do %>
          <div class="drop">
            <span> <%= rayon.title %></span>
          </div>
          <% end %>
          <div class="dropdown-content">
            <% rayon.categories.each do |category| %>
              <%= link_to "#{category.title}", rayon_path(rayon, anchor: "#{I18n.transliterate(category.title.gsub(/\s+/, ""))}"), class: "dropdown-item" %>
            <% end  %>
          </div>
        </div>
      <% end %>
      <div id="coffrets" class="dropdown" data-active-nav-target="title">
        <%= link_to coffrets_path do %>
        <div class="drop">
          <span>Coffrets</span>
        </div>
        <% end %>
        <div class="dropdown-content">
          <% @coffrets.each do |coffret| %>
            <%= link_to "#{coffret.title}", coffrets_path, class: "dropdown-item"%>
          <% end  %>
        </div>
      </div>
      <div id="presta" class="dropdown" data-active-nav-target="title">
        <%= link_to prestation_categories_path do %>
        <div class="drop">
          <span>Prestations</span>
        </div>
        <% end %>
        <div class="dropdown-content">
          <% @prestation_categories.each do |prestation| %>
            <%= link_to "#{prestation.title}", prestation_categories_path(anchor: "#{prestation.title}"), class: "dropdown-item" %>
          <% end  %>
        </div>
      </div>
      <div id="jardins" class="dropdown" data-active-nav-target="title">
        <%= link_to jardins_path do %>
        <div class="drop">
          <span>Les Jardins</span>
        </div>
        <% end %>
        <div class="dropdown-content">
          <% @jardins.each do |jardin| %>
            <%= link_to "#{jardin.title}", jardins_path(anchor: "#{jardin.title}"), class: "dropdown-item" %>
          <% end  %>
        </div>
      </div>
      <div id="articles" class="dropdown" data-active-nav-target="title">
        <%= link_to articles_path do %>
        <div class="drop">
          <span>Blog</span>
        </div>
        <% end %>
        <div class="dropdown-content">
            <%= link_to "Blog", articles_path, class: "dropdown-item" %>
        </div>
      </div>
  </div>
</div>
