<% content_for :meta_title, "Le blog des Jardins d'Alice - #{DEFAULT_META["meta_product_name"]}" %>
<div class="blog">
  <div class="articles-feed">
    <div class="title">
      <h1>Blog</h1>
    </div>
    <% if @articles.empty?%>
    <div class="articles">
      <p>Blog en construction.</p>
    </div>
    <% else %>
    <% @articles.each do |article| %>
      <div class="articles">
        <h3><%= article.title %></h3>
        <p><%= sanitize("#{article.content}".truncate(150)) %><%= link_to 'Lire plus...', article_path(article) %></p>
        <span>Publi√© le <%= article.date.strftime("%d/%m/%Y") %>.</span>
      </div>
    <% end  %>
    <% end %>
  </div>
  <div class="instagram-feed">
    <h3>Instagram</h3>
  </div>
</div>
