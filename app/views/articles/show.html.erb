<div class="article-container">
  <div class="article-title" style="background-image: url( <%= cl_image_path @article.main_photo.key, crop: :fill %> )">
    <h3><%= @article.title %></h3>
  </div>
  <div class="article-content">
    <p><%= @article.content %></p>
  </div>
  <div class="article-photos">
    <% if @article.photos_url.attached? %>
      <% @article.photos_url.each do |photo| %>
        <div class="photos">
          <%= cl_image_tag photo.key %>
        </div>
      <% end  %>
    <% end %>
  </div>
  <br>
  <span><em>Publi√© le <%= @article.date.strftime("%d/%m/%Y") %>.</em></span>
</div>
