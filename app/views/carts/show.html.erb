<h2>Cart show</h2>
<ul>
  <% @cart.line_items.each do |line_item| %>
    <li>Item: <%= line_item.product.title %>/ Price: <%= (line_item.product.price) %> <%= (line_item.product.price_currency) %>/ Quantity: <%= line_item.quantity %>/ Total Price: <%= (line_item.total_price) %> <%= (line_item.product.price_currency) %>.
    <ul>
      <li>
        <%= link_to "+1", line_item_add_path(id: line_item), method: :post %>
        <%= link_to "-1", line_item_reduce_path(id: line_item), method: :post %>
      </li>
      <li>
        <%= link_to "supprimer le produit", line_item_path(line_item), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= (@cart.sub_total) %> €.</h3>
