<div class="title">
  <h1>Coffrets</h1>
</div>
<% @coffrets.each do |coffret| %>
  <div class="coffret-container">
    <div class="coffret-main">
      <div class="coffret-image">
        <% if coffret.main_photo.attached? %>
          <%= cl_image_tag coffret.main_photo.key %>
        <% else %>
          <%= image_tag "SVG/Leafs.svg" %>
        <% end %>
      </div>
      <div class="coffret-infos">
        <h2><%= coffret.title %></h2>
        <p><%= coffret.description %></p>
        <div class="details">
          <span>Prix : <strong><%= coffret.price %> <%= coffret.price_currency %></strong>.</span>
          <%= link_to line_items_path(coffret_id: coffret.id), method: :post do %>
                <button>Ajouter au panier</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="coffret-products">
      <% coffret.coffret_products.each do |product| %>
        <div class="products">
            <div class="product-image">
              <% if product.main_photo.attached? %>
                <%= cl_image_tag product.main_photo.key %>
              <% else %>
                <%= image_tag "SVG/Leafs.svg" %>
              <% end %>
            </div>
            <div class="product-info">
              <h5><%= product.title %></h5>
              <p><%= product.description %></p>
              <p>Quantit√© : <%= product.quantity %>.</p>
              <p>Origine : <%= product.origin %>.</p>
            </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
