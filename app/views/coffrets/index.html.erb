<div class="title">
  <h1>Coffrets</h1>
</div>
<% @coffrets.each do |coffret| %>
  <div class="category">
    <div class="category-infos">
      <h4><%= coffret.title %></h4>
      <p><%= coffret.description %></p>
      <span>Prix : <%= coffret.price %> <%= coffret.price_currency %>.</span>
      <div class="coffret-image">
        <% if coffret.main_photo.attached? %>
          <%= cl_image_tag coffret.main_photo.key %>
        <% else %>
          <%= image_tag "SVG/Leafs.svg" %>
        <% end %>
      </div>
      <%= link_to line_items_path(coffret_id: coffret.id), method: :post do %>
        <div class="cart-add-coffret">
            <span>Ajouter au panier</span>
        </div>
      <% end %>
    </div>
    <div class="category-products">
      <% coffret.coffret_products.each do |product| %>
      <div class="products">
          <div class="product-image">
            <% if product.main_photo.attached? %>
              <%= cl_image_tag product.main_photo.key %>
            <% else %>
              <%= image_tag "SVG/Leafs.svg" %>
            <% end %>
          </div>
          <div class="product-info coffret">
            <h5><%= product.title %></h5>
            <p><%= product.description %></p>
            <p>Quantit√© : <%= product.quantity %>.</p>
            <p>Origine : <%= product.origin %>.</p>
            <%# IMAGES %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
