<% if current_user.admin? %>
<div class="dashboard">
  <%= render "shared/navbar_dashboard" %>
  <div class="dashboard-container">
      <h3>Éditer <%= @prestation.title %></h3>
        <%= simple_form_for(@prestation) do |f| %>
        <%= f.input :title, placeholder: "Nom de la prestation" %>
        <%= f.rich_text_area :description, placeholder: "Description de la prestation" %>
        <br>
        <%= f.input :dates, placeholder: "Dates de la prestation" %>
        <br>
        <%= f.association :prestation_category, prompt: "Selectionne un type de prestation", label: false %>
        <br>
        <button>
          <%= f.button :submit, "Mettre à jour" %>
        </button>
      <% end %>
  </div>
</div>
<% else %>
    <p>Vous n'êtes pas autorisé à consulter cette page.</p>
<% end  %>
